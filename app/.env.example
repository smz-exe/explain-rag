# LLM Configuration
ANTHROPIC_API_KEY=sk-ant-...
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_MAX_TOKENS=4096

# Embedding Configuration (FastEmbed with ONNX Runtime)
EMBEDDING_PROVIDER=local
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
# Uncomment for OpenAI embeddings:
# EMBEDDING_PROVIDER=openai
# OPENAI_API_KEY=sk-...
# EMBEDDING_MODEL=text-embedding-3-small

# Retrieval Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
DEFAULT_TOP_K=10
CHROMA_PERSIST_DIR=./data/chroma
RERANKER_MODEL=Xenova/ms-marco-MiniLM-L-6-v2

# Storage Configuration
SQLITE_DB_PATH=./data/queries.db

# Model Loading Configuration
PRELOAD_MODELS=true
HF_OFFLINE_MODE=false
# Get token from https://huggingface.co/settings/tokens (optional, but recommended)
HF_TOKEN=

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["http://localhost:3000"]
ENVIRONMENT=development

# Authentication (REQUIRED)
# Generate JWT secret: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440
ADMIN_USERNAME=admin
# Generate password hash: python -c "import bcrypt; print(bcrypt.hashpw(b'yourpassword', bcrypt.gensalt(12)).decode())"
ADMIN_PASSWORD_HASH=